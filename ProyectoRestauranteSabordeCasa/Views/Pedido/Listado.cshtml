@model IEnumerable<ProyectoRestauranteSabordeCasa.Models.PedidoModel>

@{
    ViewData["Title"] = "Listado";
}

<div class="card bg-light border border-succes">
    <div class="card-header">
        <h4 class="text-center fw-bold text-white fst-italic border py-2" style="background-color: #117A65">Listado de Pedidos</h4>
    </div>
    <div class="card-body">
        @if(User.FindFirst(x => x.Type == "Rol")?.Value == "ME")
        {
           <a asp-action="Agregar" class="btn btn-primary btn-sm"><i class="bi bi-person-plus"></i> Nuevo Pedido</a> 
        }        
        <table class="table table-bordered border-success border border-2 table-hover" id="tableTipoProducto">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MesaPedido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaPedido)
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @item.MesaPedido
                        </td>
                        <td>
                            @item.FechaPedido.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            <a asp-area="" asp-controller="DetallePedido" asp-action="Listado" class="btn btn-success btn-sm" asp-route-IdPedido="@item.IdPedido">Detalle</a>
                            @if (User.FindFirst(x => x.Type == "Rol")?.Value == "ME")
                            {
                                <a asp-area="" asp-controller="Pedido" asp-action="Editar" class="btn btn-success btn-sm" asp-route-Id="@item.IdPedido"><i class="bi bi-pencil-square"></i></a>
                                <a asp-area="" asp-controller="Pedido" asp-action="Eliminar" class="btn btn-danger btn-sm" asp-route-Id="@item.IdPedido"><i class="bi bi-trash-fill"></i></a>
                            }
                            @if (User.FindFirst(x => x.Type == "Rol")?.Value == "CA" && item.Pendiente == true)
                            {
                                <a asp-area="" asp-controller="Venta" asp-action="Agregar" class="btn btn-success btn-sm" asp-route-IdPedido="@item.IdPedido">Generar Venta</a>
                            }
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script>
$(document).ready(function() {
    $('#tableTipoProducto').DataTable();
});
    </script>
<script>
    $(document).ready(function() {
    $('#tableTipoProducto').DataTable({
        "language": {
            "url": "https://cdn.datatables.net/plug-ins/1.12.1/i18n/es-ES.json"
        };
    });
});
</script>
}