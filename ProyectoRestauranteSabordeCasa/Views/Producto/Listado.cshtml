@model IEnumerable<ProyectoRestauranteSabordeCasa.Models.ProductoModel>

@{
    ViewData["Title"] = "Listado";
}

<div class="card bg-light border border-succes">
    <div class="card-header">
        <h4 class="text-center fw-bold text-white fst-italic border py-2" style="background-color: #117A65">Listado de Productos</h4>
    </div>
    <div class="card-body">
        <a asp-action="Agregar" class="btn btn-primary btn-sm"><i class="bi bi-person-plus"></i> Nuevo Producto</a>
        <table class="table table-bordered border-success border border-2 table-hover" id="tableTipoProducto">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreTipoProd)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreProd)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Precio)
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreTipoProd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreProd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        <a asp-area="" asp-controller="Producto" asp-action="Editar" class="btn btn-success btn-sm" asp-route-IdProd="@item.IdProd"><i class="bi bi-pencil-square"></i></a>
                        <a asp-area="" asp-controller="Producto" asp-action="Eliminar" class="btn btn-danger btn-sm" asp-route-IdProd="@item.IdProd"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script>
$(document).ready(function() {
    $('#tableTipoProducto').DataTable();
});
    </script>
<script>
    $(document).ready(function() {
    $('#tableTipoProducto').DataTable({
        "language": {
            "url": "https://cdn.datatables.net/plug-ins/1.12.1/i18n/es-ES.json"
        };
    });
});
</script>
}