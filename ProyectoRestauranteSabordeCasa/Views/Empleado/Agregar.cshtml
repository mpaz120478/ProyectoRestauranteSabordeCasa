@model ProyectoRestauranteSabordeCasa.Models.EmpleadoModel

@{
    ViewData["Title"] = "Agregar";
}

<div class="container bg-light my-2 py-2 border border-1 border-success"><h3 class="text-center fw-bold text-white fst-italic border py-2" style="background-color: #117A65">Registrar Datos del Empleado</h3>
        <form asp-action="Agregar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row my-2">
                <div class="col-2">
                    <label asp-for="DniEmp" class="control-label"></label>
                    <input asp-for="DniEmp" class="form-control" type="text" maxlength="8" />
                    <span asp-validation-for="DniEmp" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="ApellidoEmp" class="control-label"></label>
                    <input asp-for="ApellidoEmp" class="form-control" type="text" />
                    <span asp-validation-for="ApellidoEmp" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="NombreEmp" class="control-label"></label>
                    <input asp-for="NombreEmp" class="form-control" type="text" />
                    <span asp-validation-for="NombreEmp" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <label asp-for="Telefono" class="control-label"></label>
                    <input asp-for="Telefono" class="form-control" type="tel" maxlength="9" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
            </div>           
            <div class="form-group row my-2">
                <div class="col-2">
                    <label asp-for="InicioContrato" class="control-label"></label>
                    <input asp-for="InicioContrato" class="form-control" type="date" />
                    <span asp-validation-for="InicioContrato" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <label asp-for="SueldoEmp" class="control-label"></label>
                    <input asp-for="SueldoEmp" class="form-control" />
                    <span asp-validation-for="SueldoEmp" class="text-danger"></span>
                </div>
                <div class="col-2">
                <label asp-for="IdCargo" class="control-label">Cargo</label><br />
                <select asp-for="IdCargo" asp-items="@ViewBag.cargos" class="form-select">
                    <option value="-1">Seleccione:</option>
                </select>
                <span asp-validation-for="IdCargo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-2">
                <div class="col-2">
                    <input type="submit" value="Guardar" class="btn btn-primary"/>
                </div>
                <div class="col-2">
                    <a asp-action="Listado" class="btn btn-warning">Regresar al Listado</a>
                </div>
            </div>
        </form>
</div>

<div>@ViewBag.mensaje</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
