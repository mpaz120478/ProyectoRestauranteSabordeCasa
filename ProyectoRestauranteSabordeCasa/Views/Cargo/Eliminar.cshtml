@model ProyectoRestauranteSabordeCasa.Models.CargoModel
@{
    ViewData["Title"] = "Eliminar";
}

<div class="container bg-light my-2 py-2 border border-1 border-success"><h3 class="text-center fw-bold text-white fst-italic border py-2" style="background-color: #117A65">Eliminar Datos del Producto</h3>
        <form asp-action="Eliminar" method="post">
            <input type="hidden" asp-for="IdCargo"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row my-2">
                <div class="col-2">
                    <label asp-for="NombreCargo" class="control-label"></label>
                    <input asp-for="NombreCargo" class="form-control" type="text" maxlength="20" disabled/>
                    <span asp-validation-for="NombreCargo" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <label asp-for="RolCargo" class="control-label"></label>
                    <input asp-for="RolCargo" class="form-control" type="text" maxlength="5" disabled/>
                    <span asp-validation-for="RolCargo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-2">
                <div class="col-2">
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                </div>
                <div class="col-2">
                    <a asp-action="Listado" class="btn btn-warning">Regresar al Listado</a>
                </div>
            </div>
       </form>
</div>
