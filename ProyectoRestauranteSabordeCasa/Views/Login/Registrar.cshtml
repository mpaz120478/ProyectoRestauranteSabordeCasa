@model ProyectoRestauranteSabordeCasa.Models.UsuarioModel
@{
    ViewBag.Title = "Inicio de Sesion";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoRestauranteSabordeCasa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoRestauranteSabordeCasa.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/Estilos.css" />
</head>
<body>
    <div class="container responsive">
	    <div class="row justify-content-center mt-5">
		    <div class="col-lg-4 col-md-6 col-sm-6">
			    <div class="card shadow border border-1 border-success">
				    <div class="card-title text-center"><h3 class="text-center fw-bold text-white fst-italic py-2" style="background-color: #117A65">Ingrese sus Datos</h3></div>
        	        <div class="card-body">
                <form asp-action="Registrar" method="post">
            	    <div class="form-outline mb-2">
            		    <input type="number" name="Dni" class="form-control form-control-lg text-dark fw-bold fw-italic" placeholder="Número DNI" required />
          		    </div>
            	    <div class="group-text form-outline mb-2">
            		    <input type="text" name="NombreUsuario" class="form-control form-control-lg  text-dark fw-bold" placeholder="Usuario" required />
            	    </div>
            	    <div class="form-outline mb-2">
            		    <input type="password" name="ClaveUsuario" class="form-control form-control-lg  text-dark fw-bold fw-italic" placeholder="Ingrese su contraseña" required />
          		    </div>
            	    <div class="form-outline mb-2">
            		    <input type="password" name="ConfirmarClave" class="form-control form-control-lg  text-dark fw-bold fw-italic" placeholder="Confirmar su contraseña" required />
          		    </div>
                      @if (ViewData["@Mensaje"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["@Mensaje"]
                                </div>
                            }
            	    <div class="form-group row">
					    <div class="col"><button class="btn text-white" type="submit" style="background-color: #117A65">Registrarse</button></div>
					    <div class="col"><a href="@Url.Action("Inicio","Login")" type="button" class="btn btn-danger">Cancelar</a></div>
				    </div>
                </form>
          	    </div>
        	</div>
      	</div>
    </div>
    
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
</body>
</html>







