@model ProyectoRestauranteSabordeCasa.Models.VentaModel

@{
    ViewData["Title"] = "Agregar";
}

<div class="container bg-light my-2 py-2 border border-1 border-success">
    <h3 class="text-center fw-bold text-white fst-italic border py-2" style="background-color: #117A65">Registrar Datos del Pedido</h3>
    <form asp-action="Agregar" asp-route-IdPedido="@ViewBag.IdPedido" method="post">
        <input type="hidden" asp-for="IdPedido"/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row my-2">
            <div class="col-2">
                <label asp-for="DniCliente" class="control-label"></label>
                <input asp-for="DniCliente" class="form-control" type="text" />
                <span asp-validation-for="DniCliente" class="text-danger"></span>
            </div>
            <div class="col-4">
                <label asp-for="DatosCliente" class="control-label"></label>
                <input asp-for="DatosCliente" class="form-control" type="text" />
                <span asp-validation-for="DatosCliente" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row my-2">
            <div class="col-2">
                <input type="hidden" asp-for="PrecioBase"/>
                <label asp-for="PrecioBase" class="control-label"></label>
                <input asp-for="PrecioBase" class="form-control" type="text" disabled/>
                <span asp-validation-for="PrecioBase" class="text-danger"></span>
            </div>
            <div class="col-2">
                <input type="hidden" asp-for="PrecioIgv"/>
                <label asp-for="PrecioIgv" class="control-label"></label>
                <input asp-for="PrecioIgv" class="form-control" type="text" disabled/>
                <span asp-validation-for="PrecioIgv" class="text-danger"></span>
            </div>
            <div class="col-2">
                <input type="hidden" asp-for="PrecioTotal"/>
                <label asp-for="PrecioTotal" class="control-label"></label>
                <input asp-for="PrecioTotal" class="form-control" type="text" disabled/>
                <span asp-validation-for="PrecioTotal" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row my-2">
            <div class="col-2">
                <input type="submit" value="Guardar" class="btn btn-primary"/>
            </div>
            <div class="col-2">
                <a asp-action="Listado" class="btn btn-warning">Regresar al Listado</a>
            </div>
        </div>
    </form>
</div>

<div>@ViewBag.mensaje</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
