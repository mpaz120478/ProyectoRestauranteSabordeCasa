@model ProyectoRestauranteSabordeCasa.Models.TipoProductoModel

@{
    ViewData["Title"] = "Agregar";
}

<div class="container bg-light my-2 py-2 border border-1 border-success"><h3 class="text-center fw-bold text-white fst-italic border py-2" style="background-color: #117A65">Registrar Datos del Tipo de Producto</h3>
        <form asp-action="Agregar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row my-2">
                <div class="col-2">
                    <label asp-for="NombreTipoProd" class="control-label"></label>
                    <input asp-for="NombreTipoProd" class="form-control" type="text"/>
                    <span asp-validation-for="NombreTipoProd" class="text-danger"></span>
                </div>
            </div>          
            <div class="form-group row my-2">
                <div class="col-2">
                    <input type="submit" value="Guardar" class="btn btn-primary"/>
                </div>
                <div class="col-2">
                    <a asp-action="Listado" class="btn btn-warning">Regresar al Listado</a>
                </div>
            </div>
        </form>
</div>

<div>@ViewBag.mensaje</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
